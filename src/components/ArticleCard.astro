---
interface Props {
    article: {
        id: number;
        title: string;
        excerpt: string;
        image: string;
        imageAlt: string;
    };
}

const { article } = Astro.props;
---

<article class="bg-white rounded-lg shadow-lg overflow-hidden">
    <img src={article.image} alt={article.imageAlt} class="w-full h-48 object-cover">
    <div class="p-4">
        <h3 class="text-xl font-bold mb-2">
            <a href={`/article/${article.id}`} class="hover:text-blue-600">{article.title}</a>
        </h3>
        <p class="text-gray-600 mb-4">{article.excerpt}</p>
        <a href={`/article/${article.id}`} class="text-blue-600 hover:underline">
            Lire la suite
        </a>
    </div>
</article>